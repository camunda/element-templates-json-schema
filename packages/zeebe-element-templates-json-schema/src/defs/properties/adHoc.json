{
  "allOf": [
    {
      "$comment": "AdHoc output properties require string-based types (Hidden, String, Text, or Dropdown)",
      "if": {
        "properties": {
          "binding": {
            "properties": {
              "type": {
                "const": "zeebe:adHoc"
              },
              "property": {
                "enum": [
                  "outputCollection",
                  "outputElement"
                ]
              }
            },
            "required": [
              "type",
              "property"
            ]
          }
        },
        "required": [
          "binding"
        ]
      },
      "then": {
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "enum": [
              "Hidden",
              "String",
              "Text",
              "Dropdown"
            ]
          }
        }
      }
    },
    {
      "$comment": "outputCollection properties must not be FEEL expressions",
      "if": {
        "properties": {
          "binding": {
            "properties": {
              "type": {
                "const": "zeebe:adHoc"
              },
              "property": {
                "const": "outputCollection"
              }
            },
            "required": [
              "type",
              "property"
            ]
          }
        },
        "required": [
          "binding"
        ]
      },
      "then": {
        "not": {
          "required": [
            "feel"
          ]
        }
      }
    }
  ]
}